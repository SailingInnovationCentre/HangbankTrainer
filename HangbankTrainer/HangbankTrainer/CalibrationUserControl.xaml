<UserControl x:Class="HangbankTrainer.CalibrationUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HangbankTrainer"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <lvc:AngularGauge Value="{Binding Value}" FromValue="500" ToValue="2000" 
                          LabelsStep="50" TicksStep="25"
                          TicksForeground="White" Foreground="White" 
                          FontWeight="Bold" FontSize="16"
                          SectionsInnerRadius=".5"
                          Width="500" Height="500"
                          Margin="20">
            <lvc:AngularGauge.Sections>
                <lvc:AngularSection FromValue="500" ToValue="{Binding Model.CurrentAthlete.MomentMin}" Fill="#D6FF98"/>
                <lvc:AngularSection FromValue="{Binding Model.CurrentAthlete.MomentMin}" ToValue="{Binding Model.CurrentAthlete.MomentGame}" Fill="#57b319"/>
                <lvc:AngularSection FromValue="{Binding Model.CurrentAthlete.MomentGame}" ToValue="{Binding Model.CurrentAthlete.MomentMax}" Fill="#F8A725"/>
                <lvc:AngularSection FromValue="{Binding Model.CurrentAthlete.MomentMax}" ToValue="2000" Fill="#FF3939"/>
            </lvc:AngularGauge.Sections>
        </lvc:AngularGauge>
        <StackPanel Orientation="Vertical">
            <Button x:Name="CalibrateMinButton" Width="200" Margin="0,10" Content="Calibreer Min" Click="CalibrateMinButton_Click"/>
            <Button x:Name="CalibrateGameButton" Width="200" Margin="0,10" Content="Calibreer wedstrijdhouding" Click="CalibrateGameButton_Click"/>
            <Button x:Name="CalibrateMaxButton" Width="200" Margin="0,10" Content="Calibreer maximum" Click="CalibrateMaxButton_Click"/>
            <Button x:Name="StopCalibrationButton" Width="200" Margin="0,20" Content="Einde calibratie" Click="StopCalibrationButton_Click"/>
        </StackPanel>
    </StackPanel>
</UserControl>
